# EditorConfig root for EmpathySWA
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
csharp_new_line_before_open_brace = all
csharp_style_namespace_declarations = file_scoped:silent
# Require XML docs for public members (reinforce guideline)
dotnet_diagnostic.CS1591.severity = warning

[*.razor]
indent_style = space
indent_size = 4
charset = utf-8

[*.{json,js,css,html}]
indent_style = space
indent_size = 2

[.editorconfig]
charset = utf-8
